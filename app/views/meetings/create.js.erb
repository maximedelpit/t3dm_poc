<% if @meeting.valid? %>
  <% if params[:meeting][:live] %>
    $('.form-part').toggleClass('hidden');
    conf_iframe = '<iframe src="https://appear.in/<%= j @meeting.room_name %>" frameborder="0"></iframe>'
    $('.conf-part').html(conf_iframe);
  <% else %>
    $('#modal1').closeModal();
    swal(
      'Success!',
      'Meeting created, an invitation has been sent!',
      'success'
    );
  <% end %>
<% else %>
  // TO DO
<% end %>

