<% if @meeting.valid? %>
  <% if params[:meeting][:live] %>
    var room_url = "https://appear.in/<%= j @meeting.room_name %>"
    var conf_iframe = '<iframe src="'+room_url+'"class="responsive-img materialboxed" width="100%" height="600px" frameborder="0"></iframe>'
    $('#pending-call .conf-part').html(conf_iframe);
    $('#live-call').closeModal()
    $('#pending-call').openModal()
    $('#pending-call .modal-content').prepend('<h3 class="url-conf-title">Please share url with attendees : '+room_url+'</h3>');
  <% else %>
    $('#modal1').closeModal();
    swal(
      'Success!',
      'Meeting created, an invitation has been sent!',
      'success'
    );
  <% end %>
<% else %>
  // TO DO
<% end %>

