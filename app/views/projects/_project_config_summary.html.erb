<h6 class='project-title'><%= @project.title %></h6>
<ul class='sub-list'>
  <li class='project-data'>Client: <%= @project.client %></li>
  <li class='project-data'>Client Ref: <%= @project.client_project_id %></li>
  <li class='project-data'>Thales Ref: <%= @project.thales_id %></li>
  <li class='project-data'>Functionality: <%= @project.part_functionality %></li>
  <li class='project-state'>Due date: <%= @project.due_date %></li>
  <li class='project-state'>State: <%= @project.state_machine.current_state %></li>
</ul>

<h6 class='project-title'>Dimensions (<%= @project.measurement_unit %>)</h6>
<ul>
  <li class='project-data'>Width: <%= @project.width %></li>
  <li class='project-data'>Length: <%= @project.length %></li>
  <li class='project-data'>Height: <%= @project.height %></li>
  <li class='project-data'>Min thickness: <%= @project.min_wall_thickness %></li>
  <li class='project-data'>Min hole ø: <%= @project.min_wall_thickness %></li>
  <li class='project-data'>Max pipe ø: <%= @project.min_wall_thickness %></li>
</ul>
<h6 class='project-title'>Specs</h6>
<ul>
  <% @project.specs.each do | spec | %>
    <li class='project-data'><%= spec.full_spec_description %></li>
  <% end %>
</ul>
