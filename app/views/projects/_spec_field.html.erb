<%= f.simple_fields_for spec_type do |p| %>
  <div class="aligned-fields">
    <div class="col s4">
      <% spec_type.class == Symbol ? label = spec_type : label = spec_type.class %>
      <%= p.input :title, collection: %w(a b c other), label: label.to_s.gsub('_', ' ').capitalize, wrapper_html: { class: 's12' } %>
    </div>
    <div class="col s8"><%= p.input :description, wrapper_html: { class: 's12' } %></div>
  </div>
<% end %>
