<% if params[:filters] %>
  var tab_id = '/projects?filters=<%= j params[:filters] %>';
<% else %>
  var tab_id = '/projects';
<% end %>
$('#projects-by-status ul.tabs').tabs()
$('#projects-by-status ul.tabs').tabs('select_tab', tab_id)
// $('#projects-by-status ul.tabs').tabs()
// $('a[href="'+tab_id+'"]').addClass('active');
<% if @projects.empty? %>
  var filter = <%= params[:filters] %>;
  var new_partial = '<p>No projects under' + filter +' process </p>'
<% elsif params[:list] %>
  var new_partial  = '<%= j render "project_list" %>'
<% else %>
  var new_partial  = '<%= j render "project_store" %>'
<% end %>

$('.main .row').html(new_partial)
