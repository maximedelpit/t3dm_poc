<% if @project && @project.persisted? %>
  <div class="nav-wrapper bg-gray-lighter" id='breadcrumb'>
    <ul class="list-inline flex-start">
      <li class="project-info">
      <%= link_to project_path(@project) do %>
        <div class='project-title'><%= @project.title %></div>
        <div class='date'><%= formatted_date(@project.created_at) %></div>
      <% end %>
      </li>
      <li class="col s5">
        <% breadcrumb_items.each do |key, value | %>
          <span class="breadcrumb"><%= value.capitalize %></span>
        <% end %>
      </li>
      <li class="col s5">
        <ul class='tabs row'>
          <% @project.users.each do |user| %>
            <li class='col'>
              <span class='center-align btn-floating text bg-<%= user.category %>'>
                <%= user.initials %>
              </span>
            </li>
          <% end %>
        </ul>
      </li>
    </ul>
  </div>
<% end %>
