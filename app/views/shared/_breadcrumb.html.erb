<% if @project && @project.persisted? %>
  <div class="nav-wrapper bg-gray-lighter" id='breadcrumb'>
    <div class='row'>
      <div class="col s2 project-info">
        <p class='project-title'><%= link_to @project.title, project_path(@project) %></p>
        <p class='date'><%= formatted_date(@project.created_at) %></p>
      </div>
      <div class="col s5">
        <% breadcrumb_items.each do |key, value | %>
          <a href="#!" class="breadcrumb"><%= value.capitalize %></a>
        <% end %>
      </div>
      <div class="col s5">
        <ul class='tabs row'>
          <% @project.users.each do |user| %>
            <li class='col'>
              <span class='center-align btn-floating text bg-<%= user.category %>'>
                <%= user.initials %>
              </span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
