<% image_url = "bg-l-nav.png" %>
<div class="card project-card">
  <div class="card-image">
    <%= image_tag image_url, class:'responsive-img' %>
  </div>
  <div class="card-content row">
    <div class="col s7">
      <h6><%= link_to project.title, project_path(project), class:'title' %></h6>
      <p class='date'><%= formatted_date(project.created_at) %></p>
      <p></p>
    </div>
    <div class="col s5 bg-<%= project.cycle %>">
      <%= project.cycle %>
      <%= project.state_machine.current_state %>
    </div>
  </div>
  <div class="card-action">
    <div>
      <span id='progress-index'></span>
      <span class='date'>Due date: <%= formatted_date(project.due_date) %></span>
    </div>

    <%= link_to "#" do %>
      <div class="badge-container">
        <i class="material-icons small">notifications</i>
        <div class="badge badge-red">3</div>
      </div>
    <% end %>
  </div>
</div>
